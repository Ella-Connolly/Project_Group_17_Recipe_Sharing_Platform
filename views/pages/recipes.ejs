<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Recipes | Recipe Share</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/nav') %>

  <main class="container">
    <h1>All Recipes</h1>

    <!-- Flash messages -->
    <% if (flash && Object.keys(flash).length > 0) { %>
      <div class="flash-messages">
        <% Object.entries(flash).forEach(([type, messages]) => { %>
          <% messages.forEach(msg => { %>
            <div class="flash <%= type %>"><%= msg %></div>
          <% }) %>
        <% }) %>
      </div>
    <% } %>

    <!-- Link to submit a recipe if logged in -->
    <% if (currentUser) { %>
      <p><a href="/recipes/submit" class="btn">Submit a New Recipe</a></p>
    <% } %>

    <div class="recipes-list">
      <% if (recipes && recipes.length) { %>
        <% recipes.forEach(recipe => { %>
          <div class="recipe-card">
            <h2><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h2>
            <p><%= recipe.description || 'No description available.' %></p>
            <% if (recipe.author_username) { %>
              <p class="author">By <%= recipe.author_username %></p>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No recipes found.</p>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
